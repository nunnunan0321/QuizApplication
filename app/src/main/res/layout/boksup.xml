<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".boksupActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <View
        android:layout_marginTop="45dp"
        android:layout_width="50sp"
        android:layout_height="4sp"
        android:background="#636060"
        tools:ignore="MissingConstraints"
        android:layout_gravity="center"
        />
    <TextView
        android:id="@+id/txt_bok_quest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="어쩌고저쩌고는?"
        android:layout_gravity="center"
        android:textSize="30sp"
        />
    <TextView
        android:id="@+id/txt_bok_watchAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="정답보기"
        android:textSize="15sp"
        android:shadowColor="#878787"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="1.5"
        />
    <TextView
        android:id="@+id/txt_bok_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="정답: 코틀린(Kotlin)"
        android:layout_gravity="center"
        />
    <Button
        android:id="@+id/btn_boksup_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="다음 문제"
        android:textSize="10sp"
        android:background="#00FFFFFF"

        android:layout_gravity="end"
        android:layout_marginRight="10dp"
        />

</LinearLayout>